option_settings:
  aws:elasticbeanstalk:application:environment:
    # Database configuration
    # These should be set via AWS Secrets Manager or Environment properties
    # DB_URL: jdbc:postgresql://your-aurora-endpoint.region.rds.amazonaws.com:5432/ehrdb
    # DB_USERNAME: postgres
    # DB_PASSWORD: set-via-secrets-manager
    
    # Application configuration
    # API_KEY: set-via-secrets-manager
    DB_DDL_AUTO: validate
    DB_SHOW_SQL: false
    
    # Logging configuration
    LOGGING_PAYLOADS_ENABLED: "true"
    LOGGING_PAYLOADS_MAX_SIZE: "1000"
